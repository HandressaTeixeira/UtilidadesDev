@using UtilidadesDev.Util
@using UtilidadesDev.ViewModels

@if (!Configuracao.AmbienteDesenvolvimento)
{
    <div class="row">
        <div class="col-12 text-center">
            @foreach (var item in ListaAnuncios())
            {
                @Html.Raw(item);
            }
        </div>
    </div>
}

@functions{
    List<string> ListaAnuncios()
    {
        return new AnunciosSomenteLinkViewModel().ListaItensYllix();
    }
}